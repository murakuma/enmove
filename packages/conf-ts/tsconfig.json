{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",

        "lib": ["es7"],
        "noLib": false,

        "declaration": false,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "sourceMap": true,

        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "experimentalDecorators": true,

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true
    }
}